using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PanelV2 : MonoBehaviour
{
    public List<Material> colors = new List<Material>();

    //Time between color changes
    public float seconds = 1;
    public int start;

    //Used to store and increment the starting value generated from the dance floor creation script
    private int c;

    private bool waiting = true;

    private void Start()
    {
        c = start;

        //Set object to starting color

        gameObject.GetComponent<Renderer>().material = colors[start - 1];
        StartCoroutine(Wait());
    }

    private void Update()
    {
        if (!waiting)
        {
            if (c < colors.Count)
            {

                //Continue through the material list
                c++;
                gameObject.GetComponent<Renderer>().material = colors[c - 1];
                StartCoroutine(Wait());
            }
            else if (c == colors.Count)
            {

                //Restart the material list
                c = 1;
                gameObject.GetComponent<Renderer>().material = colors[c - 1];
                StartCoroutine(Wait());
            }
        }
        else
            return;
    }

    //Make sure the color doesn't constantly change
    private IEnumerator Wait()
    {
        waiting = true;
        yield return new WaitForSeconds(seconds);
        waiting = false;
    }
}
